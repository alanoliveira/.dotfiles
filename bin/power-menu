#!/bin/bash

show_power_menu() {
  # The first characters are invisible sort keys.
  local menu_options="\u200B Lock
\u200C󰤄 Suspend
\u200D Relaunch
\u2060󰜉 Reboot
\u2063󰐥 Shutdown"
  local selection=$(echo -e "$menu_options" | walker --dmenu)

  case "$selection" in
  *Lock*) hyprlock ;;
  *Suspend*) systemctl suspend ;;
  *Relaunch*) uwsm stop ;;
  *Reboot*) systemctl reboot ;;
  *Shutdown*) systemctl poweroff ;;
  esac
}

show_power_menu
