{
    "rules": [
        {
            "description": "Use left control key as command key in Code Editors",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "^com\\.sublimetext\\.\\d$",
                                "^com\\.microsoft\\.VSCode$",
                                "^com\\.google\\.Chrome$"
                            ],
                            "type": "frontmost_application_if"
                        }
                    ],
                    "from": {
                        "key_code": "left_control"
                    },
                    "to": [
                        {
                            "key_code": "left_command"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Use left command key as control key in Code Editors",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "^com\\.sublimetext\\.\\d$",
                                "^com\\.microsoft\\.VSCode$",
                                "^com\\.google\\.Chrome$"
                            ],
                            "type": "frontmost_application_if"
                        }
                    ],
                    "from": {
                        "key_code": "left_command"
                    },
                    "to": [
                        {
                            "key_code": "left_control"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ],
    "title": "Use left control key as command key in Code Editors"
}