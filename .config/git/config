[pull]
	rebase = false

[alias]
	st = status -sb
	lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --decorate=full

[core]
	editor = nvim
	autocrlf = input
	quotePath = false ; show japanese dir names as it its
	pager = less -FX

[init]
	defaultBranch = master

[url "git@github.com:"]
	insteadOf = https://github.com/

[difftool]
  prompt = true

[diff]
  tool = nvimdiff

[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[user]
	email = alan.oliveira89@gmail.com
	name = Alan Oliveira
