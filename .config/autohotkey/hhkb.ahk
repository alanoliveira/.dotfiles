#Include lib\IME.ahk

; LWin+Tab to AltTab
LWin & Tab::AltTab

; RWin to toggle IME (deppends on IME.ahk)
*RWin::
    IME_SET(~IME_GET() & 0x01)
    return

; Esc to Grave or Tilde
*Esc::
    GetKeyState, state, Shift
    if (state = "D")
        send,{~ down}
    else
        send,{`` down}
    return

; Left Control to Control or Escape
; it needs to remap caps-lock to left control before (using SharpKeys for example)
g_LastCtrlKeyDownTime := 0
g_AbortSendEsc := false
g_ControlRepeatDetected := false

*LControl::
    if (g_ControlRepeatDetected)
    {
        return
    }

    send,{Ctrl down}
    g_LastCtrlKeyDownTime := A_TickCount
    g_AbortSendEsc := false
    g_ControlRepeatDetected := true

    return

*LControl Up::
    send,{Ctrl up}
    g_ControlRepeatDetected := false
    if (g_AbortSendEsc)
    {
        return
    }
    current_time := A_TickCount
    time_elapsed := current_time - g_LastCtrlKeyDownTime
    if (time_elapsed <= 250)
    {
        SendInput {Esc}
    }
    return

